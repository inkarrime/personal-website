---
import Layout from '../layouts/Layout.astro';
import inkarriPhoto from '../assets/image_profile.png';
import verifiedLogo from '../assets/verified.svg';
---

<Layout
    lang='es'
    titlePage='Links'>

    <main class="main">
        <section class="profile">
            <img class="icon" src={inkarriPhoto.src} alt="">
            <div class="name">
                <h1>@inkarri</h1>
                <img src={verifiedLogo.src} alt="">
            </div>
        </section>
        <nav class="links-container">
            <ul>
                <li>
                    <a class="item" href="https://kick.com/inkarri">Kick</a>
                </li>
                <li>
                    <a class="item" href="https://kick.com/inkarri">YouTube</a>
                </li>
            </ul>
        </section>
    </main>

</Layout>
<style>
    :root {

		--bg-color: #FFFCED;
		--bg-light-color: #0D1E26;
		--text-color: #F4F1D2;
		--accent-color: #015AFF;
		--accent-light-color: #A9C5F1;

	}

    .main {
        gap: 2rem;
        padding: 4rem 1rem;
    }

    h1 {
        color: var(--bg-light-color);
        font-size: 20px;
        font-weight: 800;
        line-height: 1.5;
        letter-spacing: -.4px;
    }

    .icon {
        border-radius: 50%;
        width: 96px;
        margin-bottom: 1rem;
    }

    .profile {
        display: flex;
        flex-direction: column;
        align-items: center;

        & .name {
            margin: 0 .75rem;
            display: flex;
            gap: .25rem;
        }
    }

    .links-container {
        width: 100%;
        display: flex;
        flex-direction: column;

        & ul, li {
            display: flex;
            width: 100%;
        }

        & ul {
            max-width: 580px;
            margin: 0 auto;
            display: grid;
            gap: 1rem;
            flex-direction: column;
        }

        & .item {
            width: 100%;
            padding: 1rem 4rem;
            color: var(--text-color);
            background-color: var(--accent-color);
            border: 2px solid var(--accent-color);
            font-size: 1rem;
            font-weight: 700;

            justify-content: center;
        }

        & .item:hover {
            background-color: transparent;
            color: var(--accent-color);
            border-color: var(--accent-color);
        }
    }

</style>