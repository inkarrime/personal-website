---
import inkarriPhoto from '../assets/image_profile.png';
import verifiedLogo from '../assets/verified.svg';
---
<main class="main">
    <section class="profile">
        <img class="icon" src={inkarriPhoto.src} alt="">
        <div class="name">
            <h1>@inkarri.me</h1>
            <img src={verifiedLogo.src} alt="">
        </div>
    </section>
    <nav class="links-container">
        <ul>
            <li>
                <a class="item" href="https://kick.com/inkarri">Kick</a>
            </li>
            <li>
                <a class="item" href="https://kick.com/inkarri">YouTube</a>
            </li>
        </ul>
    </section>
</main>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');

    :root {
		--font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;

		--bg-color: #FFFCED;
		--bg-light-color: #0D1E26;
		--text-color: #F4F1D2;
		--accent-color: #005AFF;
		--accent-light-color: #A9C5F1;

	}

    * {
		margin: 0;
		padding: 0;
	}

    body {
        margin: 0 !important;
        height: 100vh;
        background-color: var(--bg-color);
        font-family: var(--font-family);
    }

    .main {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        padding: 4rem 1rem;
    }

    h1 {
        color: var(--accent-color);
        font-size: 20px;
        font-weight: 800;
        line-height: 1.5;
        letter-spacing: -.4px;
    }

    ul {
        list-style: none;
    }

    li {
        list-style: none;
    }

    a {
        text-decoration: none;
    }

    .icon {
        border-radius: 50%;
        width: 96px;
        margin-bottom: 1rem;
    }

    .profile {
        display: flex;
        flex-direction: column;
        align-items: center;

        & .name {
            margin: 0 .75rem;
            display: flex;
            gap: .25rem;
        }
    }

    .links-container {
        width: 100%;
        display: flex;
        flex-direction: column;

        & ul, li {
            display: flex;
            width: 100%;
        }

        & ul {
            max-width: 580px;
            margin: 0 auto;
            display: grid;
            gap: 1rem;
            flex-direction: column;
        }

        & .item {
            width: 100%;
            color: var(--text-color);
            background-color: var(--accent-color);
            padding: 1rem 4rem;
            text-align: center;
            font-size: 1rem;
            font-weight: 700;
            border: 2px solid var(--accent-color);
        }

        & .item:hover {
            background-color: var(--bg-color);
            color: var(--accent-color);
        }
    }

</style>