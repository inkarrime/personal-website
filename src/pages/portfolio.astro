---
import Layout from '../layouts/Layout.astro';
import Grid from '../components/Grid.astro';
import inkarriLogo from '../assets/logo.svg';
import inkarriPhoto from '../assets/image_profile.png';
import inkarriDesk from '../assets/desk_photo.png';
import linkedinLogo from '../assets/linkedin_logo.svg';
import htmlLogo from '../assets/html.svg';
import cssLogo from '../assets/css.svg';
import sassLogo from '../assets/sass.svg';
import javascriptLogo from '../assets/javascript.svg';
import figmaLogo from '../assets/figma.svg';
import notionLogo from '../assets/notion.svg';
import miroLogo from '../assets/miro.svg';
import asanaLogo from '../assets/asana.png';
import slackLogo from '../assets/slack.svg';
import astroLogo from '../assets/astro.svg';
---

<Layout
    lang='en'
    titlePage='Portfolio'>

    <header class="header">
        <img class="icon logo" src={inkarriLogo.src} alt="Logo Homepage" />
        <ul>
            <li><a class="link" href="#portfolio">My portfolio</a></li>
            <li><a class="link" href="#about">About me</a></li>
        </ul>
    </header>
    <main class="main">
        <section class="wrapper banner">
            <div class="description">
                <h1><span class="tiny">Hey, I'm</span>
                    <span class="fullname">Jhanpiere <span class="lastname">Montes</span></span><span class="light">UX/UI Designer</span></h1>
                <p>With {new Date().getFullYear() - 2022} years of experience in designing, building and creating technology with purpose and impact positive.</p>
                <a class="button link" target="_blank" href="https://linkedin.com/in/inkarrime">Let's work together</a>
            </div>
            <div class="assets-img">
                <img class="image" src={inkarriPhoto.src} alt="Jhanpiere's Profile">
            </div>
        </section>
        <section id="portfolio" class="wrapper portfolio">
            <div class="description">
                <h2>My Portfolio</h2>
                <p>From projects to personal experiments I work in my spare time.</p>
            </div>
            <Grid></Grid>
        </section>
        <section id="about" class="wrapper about">
            <h2>About me</h2>
            <article class="description">
                <div class="assets-img reverse">
                    <img class="image" src={inkarriDesk.src} alt="Desk Photo">
                </div>
                <p>Based in Lima, Peru,<br> I'm a Computer Science student at UTEC with a passion for collaborative creation. My drive for continuous learning and enthusiasm for teamwork naturally draws me to connect with others who share the same dedication and innovative spirit.</p>
            </article>
            <article class="resumen">
                <ul>
                    <span>
                        <li class="education">
                            <h3>Education</h3>
                            <p class="light">Bachelor in Computer Science</p>
                            <p>University of Engineering and Technology (UTEC)</p>
                        </li>
                        <li class="languages">
                            <h3>Languages</h3>
                            <ul>
                                <li><p>Spanish (Native)</p></li>
                                <li><p>English (B1)</p></li>
                            </ul>
                        </li>
                        <li class="skills">
                            <h3>Skills</h3>
                            <ul>
                                <li><img class="icon height" src={figmaLogo.src} alt="Figma Logo"></li>
                                <li><img class="icon" src={htmlLogo.src} alt="HTML Logo"></li>
                                <li><img class="icon" src={cssLogo.src} alt="CSS Logo"></li>
                                <li><img class="icon" src={javascriptLogo.src} alt="JavaScript Logo"></li>
                                <li><img class="icon height" src={sassLogo.src} alt="SASS Logo"></li>
                                <li><img class="icon height" src={astroLogo.src} alt="Astro Logo"></li>
                            </ul>
                        </li>
                        <li class="tools">
                            <h3>Tools</h3>
                            <ul>
                                <li><img class="icon" src={slackLogo.src} alt="Slack Logo"></li>
                                <li><img class="icon" src={notionLogo.src}  alt="Notion Logo"></li>
                                <li><img class="icon" src={miroLogo.src} alt="Miro Logo"></li>
                                <li><img class="icon" src={asanaLogo.src} alt="Asana Logo"></li>
                            </ul>
                        </li>
                    </span>
                    <li class="experience">
                        <h3>Experience</h3>
                        <div>
                            <ul>
                                <li>
                                    <div class="role">
                                        <div>
                                            <p class="light">Product Designer</p>
                                            <h4>IDENTI</h4>
                                        </div>
                                        <div>
                                            <p>Remote</p>
                                            <p>Jul 2024 - Jan 2025</p>
                                        </div>
                                    </div>
                                    <p>Led blockchain digital identity wallet development for UN-WFP's immigrant benefits program.</p>
                                </li>
                                <li>
                                    <div class="role">
                                        <div>
                                            <p class="light">Data Governance</p>
                                            <h4>LUCHA</h4>
                                        </div>
                                        <div>
                                            <p>Hybrid</p>
                                            <p>Jul 2023 - Jul 2024</p>
                                        </div>
                                    </div>
                                    <p>Led data-driven initiatives through Power BI financial dashboards and CRM implementation, resulting in 10x lead generation growth.</p>
                                </li>
                                <li>
                                    <div class="role">
                                        <div>
                                            <p class="light">UX/UI Designer</p>
                                            <h4>AGROS</h4>
                                        </div>
                                        <div>
                                            <p>Remote</p>
                                            <p>Jan 2022 - Oct 2022</p>
                                        </div>
                                    </div>
                                    <p>Led UX research and prototyping for blockchain applications, driving user experience improvements that secured 4 international clients.</p>
                                </li>
                                <li>
                                    <div class="role">
                                        <div>
                                            <p class="light">UX Designer</p>
                                            <h4>EDTeam</h4>
                                        </div>
                                        <div>
                                            <p>Remote</p>
                                            <p>Mar 2021 - Oct 2021</p>
                                        </div>
                                    </div>
                                    <p>I worked on improving user interaction on the platform and on the campaign web pages.</p>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </article>
        </section>
    </main>
    <footer class="wrapper footer">
        <section class="child">
            <div class="inner">
                <h2>Do you want to contact me?</h2>
                <p>Let's set up a meeting, talk and see what we can create together.</p>
            </div>
            <a class="button link" target="_blank" href="https://linkedin.com/in/inkarrime">Let's work together</a>
        </section>
        <section class="child">
            <a target="_blank" href="https://linkedin.com/in/inkarrime"><img src={linkedinLogo.src} alt="LinkedIn Logo"></a>
            <p style="text-align: center" class="tiny">Creado con Astro.build <br>Â©{new Date().getFullYear()} - inkarri.me</p>
        </section>
    </footer>

</Layout>
